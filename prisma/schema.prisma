generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum ContentType {
  SOCIAL
  IFRAME
  AFFILIATE
  SECTION
  BANNER
}

model Users {
  id        Int      @unique @default(autoincrement())
  name      String
  email     String   @unique
  createdAt DateTime @default(now()) @map("created_at")

  @@map("users")
}

model Elements {
  id        Int           @unique @default(autoincrement())
  type      ContentType
  data      Json
  createdAt DateTime      @default(now()) @map("created_at")
  order     Int
  location Location @default(BR)

  @@map("elements")
}

model Leeds {
  id    Int    @unique @default(autoincrement())
  email String @unique
  location Location @default(BR)

  @@map("leads")
}

enum Location {
  BR
  US
}
