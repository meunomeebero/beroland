generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ContentType {
  SOCIAL
  IFRAME
  AFFILIATE
  SECTION
  BANNER
}

model Elements {
  id        Int           @unique @default(autoincrement())
  type      ContentType
  data      Json
  createdAt DateTime      @default(now()) @map("created_at")
  order     Int
  pageId    Int

  page      Pages         @relation(fields: [pageId], references: [id])
  @@map("elements")
}

model Leeds {
  id    Int    @unique @default(autoincrement())
  email String @unique
  location Location @default(BR)

  @@map("leads")
}

model Pages {
  id        Int      @unique @default(autoincrement())
  title     String
  slug      String   @unique
  head      String?


  elements  Elements[]

  @@map("pages")
}

enum Location {
  BR
  US
}
